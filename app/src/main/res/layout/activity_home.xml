<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="Start Your Shopping â†’"/>

        <ImageButton
            android:id="@+id/scan_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/text"
            android:background="@android:color/transparent"
            android:src="@drawable/scan"
            android:scaleType="fitCenter"/>


        <ImageView
            android:id="@+id/code_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true"
            android:src="@drawable/code_image1" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="343dp"
            android:layout_height="50dp"
            android:layout_below="@+id/code_image"
            android:layout_marginTop="55dp"
            android:layout_centerInParent="true"
            android:background="@drawable/buttonshapewhitebg"
            android:fontFamily="@font/calibri"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:drawableLeft="@drawable/trasacation"
            android:drawablePadding="-40dp"
            android:paddingLeft="60dp"
            android:text="Transactions"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/report_button"
            android:layout_width="343dp"
            android:layout_height="50dp"
            android:layout_below="@+id/search_button"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonshapewhitebg"
            android:fontFamily="@font/calibri"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:drawableLeft="@drawable/healthinfo"
            android:paddingLeft="60dp"
            android:drawablePadding="-50dp"
            android:text="Health Info"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/shop_button"
            android:layout_width="343dp"
            android:layout_height="50dp"
            android:layout_below="@+id/report_button"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonshapewhitebg"
            android:fontFamily="@font/calibri"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:drawableLeft="@drawable/shopping"
            android:paddingLeft="60dp"
            android:drawablePadding="-60dp"
            android:text="Shopping"
            android:textAllCaps="false"
            />

        <View
            android:layout_below="@id/shop_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    </RelativeLayout>
</ScrollView>